{
  "compilerOptions": {
    "target": "es6", // или "es5", в зависимости от ваших нужд
    "module": "commonjs", // используем CommonJS для Node.js
    "declaration": true, // генерировать файлы .d.ts
    "outDir": "./dist", // выходная папка
    "strict": true, // включить строгий режим
    "esModuleInterop": true, // для совместимости с ES модулями
    "skipLibCheck": true, // пропустить проверку библиотек
    "importHelpers": true // использовать tslib для уменьшения размера кода
  },
  "include": ["src/**/*"], // включить все файлы в папке src
  "exclude": ["node_modules"] // исключить папку node_modules
}
